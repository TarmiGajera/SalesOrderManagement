@model List<SalesOrderManagementSystem.DBModels.SalesOrderModel>;

@{
    ViewData["Title"] = "Sales Orders";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="CreateOrUpdate" asp-route-orderId="0" class="btn btn-primary">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>OrderID</th>
            <th>Customer Name</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Order Date</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.OrderID</td>
                <td>@item.CustomerName</td>
                <td>@item.Quantity</td>
                <td>@item.Price</td>
                <td>@item.OrderDate.ToShortDateString()</td>
                <td>@item.Status</td>
                <td>
                    <a asp-action="CreateOrUpdate" asp-route-orderId="@item.OrderID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.OrderID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.OrderID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
